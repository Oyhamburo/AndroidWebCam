<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Mic -->
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swMic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Micrófono" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swFollowOrientation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajustar receptor según orientación del teléfono"
            android:layout_marginTop="12dp" />

        <!-- Cámara: listado de TODAS las cámaras físicas -->
        <TextView
            android:id="@+id/tvCameraLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cámara"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- Aspecto -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relación de aspecto"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spAspect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- Calidad -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calidad (resolución/FPS)"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spQuality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- Bitrate -->
        <TextView
            android:id="@+id/tvBitrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bitrate: 6000 kbps"
            android:layout_marginTop="16dp" />

        <SeekBar
            android:id="@+id/seekBitrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:max="20000"
            android:min="300" />

        <!-- Aplicar -->
        <Button
            android:id="@+id/btnApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aplicar cambios"
            android:enabled="false"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
